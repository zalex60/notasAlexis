<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            Editar Nota
        </div>
        <div class="card-body">
            <form action="/notes/editar-nota/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input class="form-control" type="text" name="titulo" placeholder="Título" autofocus="" value="{{titulo}}">
                </div>
                <div class="form-group pt-2">
                    <textarea class="form-control" name="descripcion" placeholder="Descripción">{{descripcion}}</textarea>
                </div>
                <div class="form-group pt-2">

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-block" type="submit">
                            Guardar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>